{
  "expo": {
    "name": "Life Manager",
    "slug": "life-manager-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lifemanager.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Questa app richiede l'accesso alla libreria foto per selezionare un'immagine del profilo.",
        "NSCameraUsageDescription": "Questa app richiede l'accesso alla fotocamera per scattare una foto del profilo."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.lifemanager.app",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Questa app richiede l'accesso alla libreria foto per selezionare un'immagine del profilo.",
          "cameraPermission": "Questa app richiede l'accesso alla fotocamera per scattare una foto del profilo."
        }
      ]
    ]
  }
}
